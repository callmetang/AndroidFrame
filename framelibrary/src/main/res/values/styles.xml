<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>
    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>

    </style>

    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- 测试非透明主题模式 -->
    <style name="AppTheme.SwipeBack" parent="AppTheme">
        <!-- 测试全屏 START -->
        <!--
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        -->
        <!-- 测试全屏 END -->
    </style>

    <!-- 测试透明主题模式 -->
    <style name="AppTheme.SwipeBack.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Splash.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.SwipeBack.FullscreenOverlap" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 底部导航栏设置成半透明来查看悬浮效果 -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#55cccccc</item>
    </style>

    <!--dialog-->
    <style name="CaptainDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="TopDialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_top_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_top_exit</item>
    </style>

    <style name="BottomDialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

    <style name="RightDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_right_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_right_exit</item>
    </style>
    <style name="LeftDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_left_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_left_exit</item>
    </style>

    <!--dialog-->

    <style name="anim_photo_select">
        <item name="android:windowEnterAnimation">@anim/select_img_photo_pop_in</item>
        <item name="android:windowExitAnimation">@anim/select_img_photo_pop_out</item>
    </style>

</resources>
